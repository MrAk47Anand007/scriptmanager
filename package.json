{
  "name": "scriptmanager",
  "version": "0.1.0",
  "private": true,
  "description": "A standalone self-hosted script manager - write, run, schedule, and organize scripts",
  "bin": {
    "sm": "./cli/sm.mjs"
  },
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register --project tsconfig.server.json server.ts",
    "build": "next build",
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register --project tsconfig.server.json server.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "next:dev": "next dev",
    "cli": "node ./cli/sm.mjs"
  },
